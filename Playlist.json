{
  "name": "Playlist",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Playlist name"
    },
    "description": {
      "type": "string",
      "description": "Playlist description"
    },
    "category": {
      "type": "string",
      "enum": [
        "general_bar",
        "classic_rock",
        "classics",
        "happy_hour",
        "mix_beer",
        "nz_party",
        "radio_tunes",
        "irish_pop",
        "acoustic",
        "soul",
        "dj_sets",
        "easy_cafe",
        "karaoke",
        "specialty"
      ],
      "description": "Playlist category"
    },
    "song_count": {
      "type": "number",
      "default": 0,
      "description": "Number of songs in playlist"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Playlist is active"
    },
    "spotify_id": {
      "type": "string",
      "description": "Spotify playlist ID"
    },
    "color_theme": {
      "type": "string",
      "description": "Color theme for display"
    },
    "scheduled_percentage": {
      "type": "number",
      "description": "Percentage for scheduled play"
    }
  },
  "required": [
    "name",
    "category"
  ]
}